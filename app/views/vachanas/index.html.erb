<%= form_tag vachanas_path, method: :get do %>
<%= text_field_tag :vachana, params[:vachana] %>
<%= submit_tag "Search" %>
<% end %>

<% if @vachanas and !@vachanas.blank? %>
Total Counts = <%= @total_counts %> <br />

<% @vachanas.each do |vachana| %>
<%= link_to vachana.first.name, vachana.first %>
<%= vachana.first.description %> 
(<%= vachana.second %> )<br />
<% end %>
<% end %>

<script type='text/javascript'>

jQuery(function(){
		var options = {
			exact:"partial",
			keys: "<%= params[:vachana] %>"
		}
		jQuery(document).SearchHighlight(options);
	});

</script>