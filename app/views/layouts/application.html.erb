<!DOCTYPE html>
<html>
<head>
  <title>ವಚನ</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

	<div class="navbar">
  <div class="navbar-inner">
    <%= link_to "ವಚನ ಸಂಗ್ರಹ", root_path, class: "brand" %>
    <%#= link_to "#{t :vachanakaararu}", vachanakaaras_path, class: "brand" %>
   <% if current_user %>
  <%= link_to "sign_out", destroy_user_session_path, method: :delete , class: "brand" %>
  <% end %>
  <ul class="nav">
<li class= <%= params[:controller] == "vachanakaaras" ? "active" : "" %> ><%= link_to "ವಚನಕಾರರು", vachanakaaras_path %> </li>
<li class= <%= params[:controller] == "vachanas" ? "active" : "" %> ><%= link_to "ವಚನಗಳು", vachana_concord_vachanas_path %> </li>
<li class= <%= params[:controller] == "researches" ? "active" : "" %> ><%= link_to "ಸಂಶೋಧನೆ", researches_path %>  </li>
<li class= <%= %> ><%= link_to "ಸಂಪರ್ಕಿಸಿ" , "#" %></li>
</ul>
  </div>

</div>
<div class="container">


<%= yield %>
</div>

<div class="footer"> 
</div>
</body>
</html>
